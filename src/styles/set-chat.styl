
@import "./colors.styl"

.chat-icon
  background-image url("../img/chat-icon.png")
  background-size 32px 32px
  background-repeat no-repeat

.chat-message-list
  overflow auto
  height 300px

.set-chat__body-container
  background-color $defaultReverseTextColor
  border-bottom 1px solid $borderBoxColor

.set-chat__messages-container
  border-right 1px solid $borderBoxColor
  padding 0
  border 0
  padding-right 0px
  ::-webkit-scrollbar
    width 7px
    background-color #F5F5F5
    padding 2px
  ::-webkit-scrollbar-track
    -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.3)
    background-color #F5F5F5
    border-radius 5px
  ::-webkit-scrollbar-thumb
    background-color $scrollColor
    border 1px solid $scrollColor
    border-radius 7px

.chat-infinite-scroll
  min-height 350px
  max-height 350px
  overflow-y scroll
  overflow-x hidden
  position relative

/** ===================
* Animation for add participant
*/
.animate-show-hide.ng-hide
  opacity 0
  height 0

.animate-show-hide.ng-hide-add,
.animate-show-hide.ng-hide-remove
  transition all linear 0.5s


.check-element
  border 1px solid $backgroundColor
  opacity 1
  padding 10px
